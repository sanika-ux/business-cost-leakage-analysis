import pandas as pd
import matplotlib.pyplot as plt

# Load data
df = pd.read_csv('../data/orders.csv')

# Convert date
df['order_date'] = pd.to_datetime(df['order_date'])

# Total refund by vendor
vendor_refund = df.groupby('vendor')['refund_amount'].sum().sort_values(ascending=False)

vendor_refund.plot(kind='bar')
plt.title('Total Refund Amount by Vendor')
plt.xlabel('Vendor')
plt.ylabel('Refund Amount')
plt.show()

# Refund vs delivery days
refund_by_delivery = df.groupby('delivery_days')['refund_amount'].sum()

refund_by_delivery.plot(kind='line', marker='o')
plt.title('Refund Amount vs Delivery Days')
plt.xlabel('Delivery Days')
plt.ylabel('Refund Amount')
plt.show()
